# ================================
# MASUKA Environment Configuration
# ================================
# Copy this file to .env and fill in your API keys

# ================================
# Authentication Settings (Optional)
# ================================
ENABLE_AUTH=false
ALLOW_REGISTRATION=false
DEFAULT_USER_ID=1
SECRET_KEY=change-this-to-a-random-32-char-string-for-production

# ================================
# HuggingFace Configuration
# ================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
HF_HOME=/content/.cache/huggingface

# ================================
# Image Generation APIs
# ================================
# Get from: https://civitai.com/user/account
CIVITAI_API_KEY=your_civitai_api_key_here

# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# Get from: https://fal.ai/dashboard/keys
FAL_KEY=your_fal_key_here

# ================================
# Video Generation APIs
# ================================
# Get from: https://www.comet.com/ (for Sora 2, VEO3, Runway)
COMET_API_KEY=your_comet_api_key_here

# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# ================================
# Tunneling (for Colab remote access)
# ================================
# Get from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_TOKEN=your_ngrok_token_here

# ================================
# Cloud Compute (Optional)
# ================================
# Get from: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=your_runpod_api_key_here

# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_token_here

# ================================
# Database Configuration
# ================================
DATABASE_URL=sqlite:///./database.db

# ================================
# File Storage Paths
# ================================
# Leave these as default for standard setup
# Override only if you need custom paths
# MEDIA_DIR=/path/to/media
# UPLOAD_DIR=/path/to/uploads
# RESULTS_DIR=/path/to/results
# LORA_OUTPUT_DIR=/path/to/loras

# ================================
# Server Configuration
# ================================
HOST=0.0.0.0
PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5173

# ================================
# Training Defaults
# ================================
DEFAULT_STEPS=800
DEFAULT_BATCH_SIZE=1
DEFAULT_LEARNING_RATE=0.0008
DEFAULT_TRAIN_DIM=512
DEFAULT_RANK_DIM=8

# ================================
# Inference Defaults
# ================================
DEFAULT_LORA_WEIGHT=0.73
DEFAULT_TEST_DIM=1024
DEFAULT_INFERENCE_STEPS=30
DEFAULT_BATCH_SIZE_INFERENCE=4

# ================================
# Advanced Settings
# ================================
# Environment type: development, staging, production
ENVIRONMENT=development

# System paths
APP_PATH=.
WORK_DIR=./workspace
CACHE_DIR=./cache
OUTPUT_DIR=./output

# Compute settings (GPU optimization)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# CORS allowed origins (comma-separated, optional)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
